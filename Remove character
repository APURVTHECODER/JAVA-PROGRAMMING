
public class Solution {

	public static String removeAllOccurrencesOfChar(String str, char ch) {
		// Your code goes here
        String ans = "";
    //   ans += s.charAt(0);
      for(int i = 0; i<str.length(); i++)
      {
          if(str.charAt(i) == ch)
          {
              continue;
          }
          else{
              ans += str.charAt(i);
          }
      }
      //ans+=s.charAt(s.length()-1);
      return ans;

	}

}
