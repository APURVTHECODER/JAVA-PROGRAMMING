
public class Solution {

	public static String reverseEachWord(String str) {
		//Your code goes here
  		int n=str.length();
        String str1="";
        String str4="";
        char ch='x';
        for(int i=0;i<n;i++)
        {
            ch=str.charAt(i);
            str1=ch+str1;
        }
        String[] str3=str1.split(" ");
        int x=str3.length;
        for(int j=x-1;j>=0;j--)
        {
            str4=str4+str3[j]+" ";
        }
        
        return str4;
	}

}
