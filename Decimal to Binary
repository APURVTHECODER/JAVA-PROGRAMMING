import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
    Scanner s = new Scanner(System.in);
    int n=s.nextInt();
    int t=n;
    String b="";
    if(n==0)
    {
        System.out.print("0");
        return;
    }
    while(t>0)
    {
  
        int r=t%2;
        t=t/2;
        b=r+b;
        

    }
       System.out.print(b);
            
        

	}
}
