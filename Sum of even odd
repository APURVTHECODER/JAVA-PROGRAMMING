import java.util.Scanner;
import java.lang.Math;  
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
 	Scanner s = new Scanner(System.in);
    int a=s.nextInt();
    int evensum=0;
    int oddsum=0;
    while(a!=0)
    {
        int rem=a%10;
        if(rem%2==0)
        {
            evensum=evensum+rem;
        }
        else{
            oddsum=oddsum+rem;
        }
        a=a/10;
    }
    System.out.println(evensum+ " "+oddsum);

    

	}
}
