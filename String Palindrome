
public class Solution {

	public static boolean isPalindrome(String str) {
		//Your code goes here
        int n=str.length();
        String strrev="";
        boolean b=false;
        for(int i=n-1;i>=0;i--)
        {
            strrev=strrev+str.charAt(i);

        }
        
        if(strrev.equals(str))
        {
            b=true;
        }

        return b;
	}

}
