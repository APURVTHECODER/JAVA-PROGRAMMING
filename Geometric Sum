
public class solution {

	public static double findGeometricSum(int k){
		// Write your code here
        if(k==0){
            return 1.0;
        }
        
        
     	double small=findGeometricSum(k-1);
        double result=(1-Math.pow(2,-k-1))/(1-Math.pow(2,-1));
        
        return result;
        
        
        
    

	}
}
